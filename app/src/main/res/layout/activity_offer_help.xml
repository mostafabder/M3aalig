<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appcolor"
    tools:context="com.asi.m3alig.M3algFilesWork.OfferHelpActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/appcolor"
        android:weightSum="1"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:onClick="goBack"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/ivBackArrow"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/main_screen_arrow_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/back"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:gravity="right"
            android:layout_height="match_parent"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/offer_help"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"

                />
            <ImageView
                android:id="@+id/ivMoreArrow"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/call_icon"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />

        </LinearLayout>


    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#80112233"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/get_call_icon"
                />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/get_chat_icon"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
